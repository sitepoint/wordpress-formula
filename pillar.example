wordpress:
  cli:
    source: https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar
    hash:  https://raw.githubusercontent.com/wp-cli/builds/gh-pages/phar/wp-cli.phar.sha512
  site_dependencies:
    include:
      - somestate
    require:
      - 'sls: somestate'
  sites:
    sitenameA.com:
      username: siteAuser
      password: siteApass
      database: siteAdb
      dbhost: localhost
      dbuser: siteAdbuser
      dbpass: siteAdbpass
      url: http://siteA.com
      title: 'siteA title'
      email: siteA@email.com
    sitenameB.com:
      username: siteBuser
      password: siteBpass
      database: siteBdb
      dbhost: localhost
      dbuser: siteBdbuser
      dbpass: siteBdbpass
      url: http://siteB.com
      title: 'siteB title'
      email: siteB@email.com
    lookup:
      docroot: /var/html
